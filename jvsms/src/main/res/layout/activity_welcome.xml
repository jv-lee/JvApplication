<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2957C6"
    android:orientation="vertical"
    tools:context="com.jv.sms.activity.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="快速便捷的沟通"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="为了更加轻松快捷地与他人保持联络，请将\n\t\t\t\t\tJvSms 设为您的默认短信应用。"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:typeface="serif" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@mipmap/ic_default" />

    <LinearLayout
        android:id="@+id/ll_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#1C3AA9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="跳过"
            android:textColor="#84A2EE" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffff" />


    </LinearLayout>

</LinearLayout>
